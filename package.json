{
    "name": "web-copilot",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --mode development -c vite.popup.config.js",
        "build": "vite build --mode development -c vite.popup.config.js && vite build --mode development -c vite.content.config.js && vite build --mode development -c vite.background.config.js && node build.js",
        "build-pro": "vite build --mode production -c vite.popup.config.js && vite build --mode production -c vite.content.config.js && vite build --mode production -c vite.background.config.js && node build.js",
        "preview": "vite preview",
        "cz": "cz",
        "prepare": "husky",
        "lint": "eslint"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "@vueuse/core": "^10.11.1",
        "animate.css": "^4.1.1",
        "axios": "^1.7.9",
        "commitizen": "^4.3.1",
        "element-plus": "^2.9.4",
        "pinia": "^2.3.1",
        "sass": "^1.84.0",
        "vue": "^3.5.13",
        "vue-i18n": "^9.14.2",
        "vue-router": "^4.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@types/chrome": "^0.0.308",
        "@vitejs/plugin-vue": "^5.2.1",
        "autoprefixer": "^10.4.20",
        "cz-git": "^1.11.0",
        "eslint": "~9.20.1",
        "eslint-plugin-vue": "^9.32.0",
        "globals": "^15.15.0",
        "hot-reload-extension-vite": "^1.0.13",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "postcss": "^8.5.2",
        "prettier": "3.3.3",
        "rollup-plugin-visualizer": "^5.14.0",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.7.3",
        "typescript-eslint": "^7.18.0",
        "unplugin-auto-import": "^19.0.0",
        "unplugin-vue-components": "^28.0.0",
        "vite": "^5.4.14",
        "vite-plugin-html": "^3.2.2",
        "vite-plugin-vue-devtools": "1.0.0-rc.5"
    }
}
